<h1>Welcome</h1>

<% if current_user %>
  <% case current_user.role %>
  <% when 'user' %>
    <h3>Welcome, User</h3>
  <% when 'admin' %>
    <h3>Welcome, Administrator</h3>
  <% end %>
<% else %>
  <h3>Welcome</h3>
<% end %>

<p><%= link_to 'Users:', users_path %> </p>
<p><%= link_to 'Questions:', user_questions_path(@user) %> </p>
